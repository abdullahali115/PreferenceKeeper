<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserSettings"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="240dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/top_background"
            android:scaleType="fitXY"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:background="@drawable/ic_profile"
            android:padding="8dp"/>
    </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="32dp"
                android:layout_height="35dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="4dp"
                android:backgroundTint="@color/iconColor"
                android:background="@drawable/profile_round_1342_svgrepo_com" />

            <View
                android:layout_width="22dp"
                android:layout_height="match_parent"
                />

            <EditText
                android:id="@+id/setName"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:background="@drawable/inp_border"
                android:hint="Name"
                android:paddingStart="20dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="2dp"
                android:backgroundTint="@color/iconColor"
                android:background="@drawable/ic_email" />

            <View
                android:layout_width="22dp"
                android:layout_height="match_parent"
                />

            <EditText
                android:id="@+id/setEmail"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:background="@drawable/inp_border"
                android:hint="Email"
                android:paddingStart="20dp"
                android:inputType="textEmailAddress"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="33dp"
                android:layout_height="35dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="2dp"
                android:backgroundTint="@color/iconColor"
                android:background="@drawable/lock_svgrepo_com" />

            <View
                android:layout_width="25dp"
                android:layout_height="match_parent"
                />

            <EditText
                android:id="@+id/setPassword"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:background="@drawable/inp_border"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingStart="20dp"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:backgroundTint="@color/iconColor"
                android:background="@drawable/phone_svgrepo_com" />

            <View
                android:layout_width="22dp"
                android:layout_height="match_parent"
                />

            <EditText
                android:id="@+id/setPhone"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:background="@drawable/inp_border"
                android:hint="Phone No."
                android:paddingStart="20dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="32dp"
                android:layout_height="33dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:backgroundTint="@color/iconColor"
                android:background="@drawable/profile_round_1342_svgrepo_com" />

            <View
                android:layout_width="29dp"
                android:layout_height="match_parent"
                />

            <RadioGroup
                android:id="@+id/setGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textSize="16sp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginRight="10dp"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:textSize="16sp"
                    android:layout_marginBottom="6dp"
                    />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:backgroundTint="@color/iconColor"
                android:background="@drawable/bell_svgrepo_com" />

            <View
                android:layout_width="28dp"
                android:layout_height="match_parent"
                />

            <RadioGroup
                android:id="@+id/setNotifs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="On"
                    android:textSize="16sp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginRight="28dp"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Off"
                    android:textSize="16sp"
                    android:layout_marginBottom="6dp"
                    />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="4dp"
                android:backgroundTint="@color/iconColor"
                android:background="@drawable/contrast_svgrepo_com" />

            <View
                android:layout_width="32dp"
                android:layout_height="match_parent"
                />

            <RadioGroup
                android:id="@+id/themeSetter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Light"
                    android:textSize="16sp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginRight="12dp"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dark"
                    android:textSize="16sp"
                    android:layout_marginBottom="6dp"
                    />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="70dp"
            android:layout_marginTop="12dp"
            >

            <Button
                android:id="@+id/saveBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:backgroundTint="@color/seaGreen"
                android:textColor="@color/black"
                />

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                />

            <Button
                android:id="@+id/resetBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset"
                android:backgroundTint="@color/seaGreen"
                android:textColor="@color/black"
                />
        </LinearLayout>

    </LinearLayout>


</ScrollView>